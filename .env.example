# AI Stock Research Tool - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# REQUIRED: Claude AI API Key from Anthropic
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./financial_agent.db

# Server Configuration
HOST=localhost
PORT=8000
DEBUG=true

# JWT Security (generate a secure secret key)
SECRET_KEY=your_jwt_secret_key_here_generate_a_secure_random_string

# Optional: Advanced Configuration
# Set to false in production
ENABLE_CORS=true

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Optional: Logging Level
LOG_LEVEL=INFO